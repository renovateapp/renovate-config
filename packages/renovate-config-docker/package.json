{
  "name": "renovate-config-docker",
  "description": "Preset docker configs for Renovate",
  "author": "Rhys Arkins <rhys@arkins.net>",
  "license": "MIT",
  "homepage": "https://github.com/singapore/renovate-config",
  "bugs": {
    "url": "https://github.com/singapore/renovate-config/issues"
  },
  "version": "0.1.0",
  "renovate-config": {
    "disable": {
      "docker": {
        "enabled": false
      },
      "docker-compose": {
        "enabled": false
      },
      "circleci": {
        "enabled": false
      }
    },
    "enableMajor": {
      "docker": {
        "major": {
          "enabled": true
        }
      }
    },
    "disableMajor": {
      "docker": {
        "major": {
          "enabled": false
        }
      }
    },
    "pinDigests": {
      "description": "Pin Docker digests",
      "docker": {
        "pinDigests": true
      }
    }
  }
}
